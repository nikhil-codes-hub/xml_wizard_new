{
  "schema": "1_test.xsd",
  "mode": "custom",
  "seed": 77777,
  
  "values": {
    "/TravelBooking/BookingID": "CUS-2024-001",
    "PaymentMethod": "Credit Card",
    "Currency": "USD"
  },
  
  "patterns": {
    "*ID": "generate:uuid",
    "*Amount": "generate:currency",
    "*Time": "generate:datetime",
    "*Date": "generate:date",
    "*Airport": "generate:code"
  },
  
  "choices": {
    "TravelBooking": {
      "conditions": [
        {
          "if": "Amount > 1000",
          "choose": "PickupLocation"
        },
        {
          "if": "Amount <= 1000", 
          "choose": "DeliveryAddress"
        }
      ],
      "default": "DeliveryAddress"
    }
  },
  
  "templates": {
    "premium_passenger_data": {
      "data": [
        {
          "FirstName": "Victoria",
          "LastName": "Sterling",
          "Gender": "Female",
          "BirthDate": "1981-06-25",
          "PassengerID": "PAX-PREM-001"
        },
        {
          "FirstName": "Alexander",
          "LastName": "Whitfield",
          "Gender": "Male",
          "BirthDate": "1976-12-18",
          "PassengerID": "PAX-PREM-002"
        }
      ],
      "cycle": "sequential",
      "computed": {
        "FullName": "concat(FirstName, \" \", LastName)",
        "AgeCategory": {
          "formula": "BirthDate < '1990-01-01' ? 'Adult' : 'Young Adult'",
          "inputs": ["BirthDate"]
        }
      }
    },
    
    "dynamic_flight_data": {
      "data": [
        {
          "DepartureAirport": "JFK",
          "ArrivalAirport": "LHR",
          "DepartureTime": "2024-12-15T20:45:00",
          "ArrivalTime": "2024-12-16T08:15:00",
          "SegmentID": "SEG-INTL-001"
        },
        {
          "DepartureAirport": "LHR",
          "ArrivalAirport": "CDG",
          "DepartureTime": "2024-12-16T11:30:00",
          "ArrivalTime": "2024-12-16T13:45:00",
          "SegmentID": "SEG-EUR-001"
        }
      ],
      "cycle": "sequential",
      "computed": {
        "FlightDuration": "ArrivalTime - DepartureTime",
        "RouteCode": "concat(DepartureAirport, \"-\", ArrivalAirport)"
      }
    },
    
    "location_data": {
      "data": [
        {
          "pickup": "Heathrow Airport - Terminal 5 - First Class Lounge",
          "delivery": "123 Regent Street, London, UK W1B 4HR"
        }
      ],
      "cycle": "once"
    }
  },
  
  "namespaces": {
    "default": "http://example.com/travel",
    "prefixes": {
      "travel": "http://example.com/travel"
    }
  }
}